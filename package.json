{
  "name": "blastr",
  "version": "0.1.0",
  "private": true,
  "description": "The Blastr Frontend Compiler Framework",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "test": "pnpm -r run test",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0"
  },
  "keywords": [],
  "author": "CorentynDevPro",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0"
}
